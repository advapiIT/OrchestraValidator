<catel:Window x:Class="CatelValidationDemo.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:catel="http://schemas.catelproject.com"
              ResizeMode="CanResize">

     <Grid x:Name="LayoutRoot" Background="Yellow">
                
       <TextBox Width="200" Height="30" Text="{Binding TextMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"></TextBox>
    </Grid>
    
</catel:Window>
